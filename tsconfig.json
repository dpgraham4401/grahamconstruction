{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["@testing-library/jest-dom"],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
    }
  }
}